<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inossem.oms.base.common.mapper.CountryTableMapper">
    
    <resultMap type="com.inossem.oms.base.common.domain.CountryTable" id="CountryTableResult">
        <result property="id"    column="id"    />
        <result property="countryCode"    column="country_code"    />
        <result property="isoCode"    column="iso_code"    />
        <result property="name"    column="name"    />
    </resultMap>

    <sql id="selectCountryTableVo">
        select id, country_code, iso_code, name from country_table
    </sql>

    <select id="selectCountryTableList" parameterType="com.inossem.oms.base.common.domain.CountryTable" resultMap="CountryTableResult">
        <include refid="selectCountryTableVo"/>
        <where>  
            <if test="countryCode != null  and countryCode != ''"> and country_code = #{countryCode}</if>
            <if test="isoCode != null  and isoCode != ''"> and iso_code = #{isoCode}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
    </select>
    
    <select id="selectCountryTableById" parameterType="Long" resultMap="CountryTableResult">
        <include refid="selectCountryTableVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertCountryTable" parameterType="com.inossem.oms.base.common.domain.CountryTable" useGeneratedKeys="true" keyProperty="id">
        insert into country_table
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="countryCode != null and countryCode != ''">country_code,</if>
            <if test="isoCode != null and isoCode != ''">iso_code,</if>
            <if test="name != null and name != ''">name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="countryCode != null and countryCode != ''">#{countryCode},</if>
            <if test="isoCode != null and isoCode != ''">#{isoCode},</if>
            <if test="name != null and name != ''">#{name},</if>
         </trim>
    </insert>

    <update id="updateCountryTable" parameterType="com.inossem.oms.base.common.domain.CountryTable">
        update country_table
        <trim prefix="SET" suffixOverrides=",">
            <if test="countryCode != null and countryCode != ''">country_code = #{countryCode},</if>
            <if test="isoCode != null and isoCode != ''">iso_code = #{isoCode},</if>
            <if test="name != null and name != ''">name = #{name},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCountryTableById" parameterType="Long">
        delete from country_table where id = #{id}
    </delete>

    <delete id="deleteCountryTableByIds" parameterType="String">
        delete from country_table where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>